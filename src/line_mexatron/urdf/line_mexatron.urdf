<?xml version="1.0" encoding="utf-8"?>
<robot  name="line_mexatron">

  
<link name="base_link">
  <inertial>
    <mass value="1.0"/>
    <inertia ixx="0.015" iyy="0.0375" izz="0.0375"
    ixy="0" ixz="0" iyz="0"/>
  </inertial>
  <visual>
    <origin
      xyz="0 0 0"
      rpy="0 0 1.5708" />
    <geometry>
      <mesh
        filename="package://line_mexatron/meshes/chassis_rsz.stl" />
    </geometry>
    <material
      name="">
      <color
        rgba="1 1 1 1" />
    </material>
  </visual>
  <collision>
    <origin
      xyz="0 0 0"
      rpy="0 0 0" />
    <geometry>
      <box size='0.15 0.15 0.02'/>
    </geometry>
  </collision>
</link>

<!-- BreadBoard -->
<link name="breadboard">
  <inertial>
    <origin
      xyz="0 0 0"
      rpy="0 0 0" />
    <mass
      value="0.001" />
    <inertia
      ixx="0.01"
      ixy="0.01"
      ixz="0.01"
      iyy="0.01"
      iyz="0.01"
      izz="0.01" />
  </inertial>
  <visual>
    <origin
      xyz="0 0 0"
      rpy="0 0 0" />
    <geometry>
      <mesh
        filename="package://line_mexatron/meshes/breadboard_rsz.stl" />
    </geometry>
    <material
      name="">
      <color
        rgba="236 236 236 1" />
    </material>
  </visual>
  <collision>
    <origin
      xyz="0 0 0"
      rpy="0 0 0" />
    <geometry>
      <mesh
        filename="package://line_mexatron/meshes/breadboard_rsz.stl" />
    </geometry>
  </collision>
</link>

<joint name="breadboard_to_base" type="fixed">
  <parent link="base_link"/>
  <child link="breadboard"/>
  <origin xyz="0.034 0 0.015" rpy="0 0 1.5708"/>
</joint>

<!-- PCB-->
<link name="pcb_link">
  <inertial>
    <origin
      xyz="0 0 0"
      rpy="0 0 0" />
    <mass
      value="0.001" />
    <inertia
      ixx="0.01"
      ixy="0.01"
      ixz="0.01"
      iyy="0.01"
      iyz="0.01"
      izz="0.01" />
  </inertial>
  <visual>
    <origin
      xyz="0 0 0"
      rpy="0 0 0" />
    <geometry>
      <mesh
        filename="package://line_mexatron/meshes/pcb_rsz.stl" />
    </geometry>
    <material
      name="">
      <color
        rgba="255 215 0 1" />
    </material>
  </visual>
  <collision>
    <origin
      xyz="0 0 0"
      rpy="0 0 0" />
    <geometry>
      <box size='0.06 0.09 0.01'/>
    </geometry>
  </collision>
</link>

<joint name="pcb_to_base" type="fixed">
  <origin xyz="-0.018 0 0.026" rpy="0 0 1.5708"/>
  <parent link="base_link"/>
  <child link="pcb_link"/>
  <axis xyz="0 0 0"/>
</joint>

<!--Left Wheel-->
  <link
    name="wheellft">
  <inertial>
    <mass value="0.1"/>
    <inertia ixx="5.1458e-5" iyy="5.1458e-5" izz="6.125e-5"
    ixy="0" ixz="0" iyz="0"/>
  </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 1.5708 0" />
      <geometry>
        <mesh
          filename="package://line_mexatron/meshes/wheel_rsz.stl" />
      </geometry>
      <material
        name="">
        <color
          rgba="0 0 0 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <cylinder length="0.01" radius="0.0385"/>
      </geometry>
    </collision>
  </link>

  <joint
    name="wheelleft"
    type="continuous">
    <parent link="base_link" />
    <child link="wheellft" />
    <origin xyz="-0.0345 0.075 -0.012" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <transmission name="wheelleft_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="wheelleft_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="wheelleft">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
  </transmission>

<!--Rigth Wheel-->
  <link
    name="wheelrgt">
  <inertial>
    <mass value="0.1"/>
    <inertia ixx="5.1458e-5" iyy="5.1458e-5" izz="6.125e-5"
    ixy="0" ixz="0" iyz="0"/>
  </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 1.5708 0" />
      <geometry>
        <mesh
          filename="package://line_mexatron/meshes/wheel_rsz.stl" />
      </geometry>
      <material
        name="">
        <color
          rgba="0 0 0 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <cylinder length="0.01" radius="0.0385"/>
      </geometry>
    </collision>
  </link>


  <joint
    name="wheelright"
    type="continuous">
    <parent link="base_link" />
    <child link="wheelrgt" />
    <origin xyz="-0.0345 -0.075 -0.012" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <transmission name="wheelright_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="wheelright_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="wheelright">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
  </transmission>


<!-- Ball Caster--> 
  <link
    name="caster_link">
  <inertial>
    <mass value="0.1"/>
    <inertia ixx="5.1458e-5" iyy="5.1458e-5" izz="6.125e-5"
    ixy="0" ixz="0" iyz="0"/>
  </inertial>
  
    <ode>
      <mu>0</mu>
      <mu2>0</mu2>
      <fdir1> 0 0 0</fdir1>
      <slip1>0</slip1>
      <slip2>0</slip2>
    </ode>
  
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://line_mexatron/meshes/ballcaster_rsz.stl" />
      </geometry>
      <material
        name="">
        <color
          rgba="0 0 0 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <sphere radius="0.0125"/>
      </geometry>
    </collision>
  </link>

  <joint
    name="caster_joint"
    type="continuous">
    <origin
        xyz="0.052 0 -0.034"
        rpy="0 0 0" />
    <parent
      link="base_link" />
    <child
      link="caster_link" />
    <axis
      xyz="0 0 1" />
  </joint>

<!-- Camera -->
<link name="camera_link">
  <visual>
    <geometry>
      <mesh filename="package://line_mexatron/meshes/head.dae" scale=".5 .5 .5"/>
    </geometry>
  </visual>
  <collision>
    <geometry>
      <sphere radius="0.02"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="0.10"/>
    <inertia ixx="0.03" ixy="0.0" ixz="0.0" iyy="0.03" iyz="0.0" izz="0.03"/>
  </inertial>
</link>

<joint name="base_to_camera" type="continuous">
  <axis xyz="0 0 1"/>
  <parent link="base_link"/>
  <child link="camera_link"/>
  <origin rpy="0 0 0" xyz="0.07 0 0.02"/>
  <limit effort="30" velocity="1.0"/>
</joint>

<transmission name="camera_transmission">
  <type>transmission_interface/SimpleTransmission</type>
  <actuator name="$camera_motor">
    <mechanicalReduction>1</mechanicalReduction>
  </actuator>
  <joint name="base_to_camera">
    <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
  </joint>
</transmission>

<gazebo reference="camera_link">
<sensor type="camera" name="camera1">
  <update_rate>30.0</update_rate>
  <camera name="camera">
    <horizontal_fov>1.3962634</horizontal_fov>
    <image>
      <width>800</width>
      <height>800</height>
      <format>R8G8B8</format>
    </image>
    <clip>
      <near>0.02</near>
      <far>300</far>
    </clip>
    <noise>
      <type>gaussian</type>
      <!-- Noise is sampled independently per pixel on each frame.
           That pixel's noise value is added to each of its color
           channels, which at that point lie in the range [0,1]. -->
      <mean>0.0</mean>
      <stddev>0.007</stddev>
    </noise>
  </camera>
  <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
    <alwaysOn>true</alwaysOn>
    <updateRate>0.0</updateRate>
    <cameraName>camera</cameraName>
    <imageTopicName>image_raw</imageTopicName>
    <cameraInfoTopicName>camera_info</cameraInfoTopicName>
    <frameName>camera_link</frameName>
    <hackBaseline>0.07</hackBaseline>
    <distortionK1>0.0</distortionK1>
    <distortionK2>0.0</distortionK2>
    <distortionK3>0.0</distortionK3>
    <distortionT1>0.0</distortionT1>
    <distortionT2>0.0</distortionT2>
  </plugin>
</sensor>
</gazebo>

  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/</robotNamespace>
    </plugin>
  </gazebo>

<gazebo reference="base_link">
  <material>Gazebo/Grey</material>
</gazebo>
<gazebo reference="breadboard">
  <material>Gazebo/White</material>
</gazebo>
<gazebo reference="pcb_link">
  <material>Gazebo/Gold</material>
</gazebo>
<gazebo reference="caster_link">
  <material>Gazebo/Black</material>
  <mu1>0</mu1>
  <mu2>0</mu2>
<minDepth>0.001</minDepth>
  <kp>100000000</kp>
  <kd>1</kd>
</gazebo>
<gazebo reference="wheelrgt">
  <material>Gazebo/Black</material>
  <minDepth>0.001</minDepth>
  <kp>100000000</kp>
  <kd>1</kd>
</gazebo>
<gazebo reference="wheellft">
  <material>Gazebo/Black</material>
  <minDepth>0.001</minDepth>
  <kp>100000000</kp>
  <kd>1</kd>
</gazebo>


</robot>
